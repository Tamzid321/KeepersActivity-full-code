<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/logout_dialog_bg"
    android:orientation="vertical" >

    <TextView
        android:gravity="center"
        android:id="@+id/txt_dia"
        android:layout_width="198dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Are you sure you want to logout?"
        android:textColor="#747474"
        android:textSize="18sp"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:id="@+id/btn_yes"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:background="@drawable/logout_yes_btn"
            android:text="Yes"
            android:textColor="#63809C"
            android:textStyle="bold" />

        <TextView
            android:gravity="center"
            android:id="@+id/btn_no"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:background="@drawable/logout_no_btn"
            android:text="No"
            android:textColor="#FFAE0D"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>